generator client {
  provider = "prisma-client"
  // Use default output location for better compatibility with pnpm
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               String   @id @default(uuid())
  nickname         String   @unique
  username         String?  @unique
  isAdmin          Boolean  @default(false)
  email            String?  @unique
  strategyLevel    Int      @default(1)
  strategyXp       Int      @default(0)
  playfulLevel     Int      @default(1)
  playfulXp        Int      @default(0)
  actionPointCurr  Int      @default(0)
  actionPointMax   Int      @default(0)
  gold             BigInt   @default(0)
  diamonds         BigInt   @default(0)
  league           String?
  tournamentScore  Int      @default(0)
  towerFloor       Int      @default(0)
  lastTowerClearTime BigInt?
  monthlyTowerFloor Int     @default(0)
  status           Json?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  version          Int      @default(0)

  inventory        UserInventory[]
  equipment        UserEquipment[]
  mail             UserMail[]
  quests           UserQuest[]
  missions         UserMission[]
  inventoryHistory InventoryHistory[]
  credential       UserCredential?
  guild            Guild?            @relation("GuildLeader")
  guildMember      GuildMember?

  @@index([league])
  @@index([tournamentScore])
  @@index([towerFloor])
  @@index([towerFloor, lastTowerClearTime])
}

model UserInventory {
  id             String   @id @default(uuid())
  userId         String
  templateId     String
  quantity       Int      @default(1)
  slot           String?
  enhancementLvl Int      @default(0)
  stars          Int      @default(0)
  rarity         String?
  metadata       Json?
  isEquipped     Boolean  @default(false)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  version        Int      @default(0)

  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  equippedIn     UserEquipment[]
  history        InventoryHistory[]

  @@index([userId])
  @@index([userId, templateId])
  @@index([userId, slot])
}

model UserEquipment {
  id           String   @id @default(uuid())
  userId       String
  slot         String
  inventoryId  String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  version      Int      @default(0)

  user         User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  inventory    UserInventory? @relation(fields: [inventoryId], references: [id], onDelete: SetNull)

  @@unique([userId, slot])
  @@index([inventoryId])
}

model UserMail {
  id         String   @id @default(uuid())
  userId     String
  title      String
  body       String
  attachments Json?
  isRead     Boolean  @default(false)
  expiresAt  DateTime?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, isRead])
  @@index([expiresAt])
}

model UserQuest {
  id        String   @id @default(uuid())
  userId    String
  questId   String
  status    String
  progress  Json?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, questId])
  @@unique([userId, questId])
}

model UserMission {
  id        String   @id @default(uuid())
  userId    String
  missionId String
  level     Int      @default(1)
  state     Json?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, missionId])
  @@unique([userId, missionId])
}

model InventoryHistory {
  id           String   @id @default(uuid())
  userId       String
  inventoryId  String?
  action       String
  delta        Json?
  createdAt    DateTime @default(now())

  user         User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  inventory    UserInventory? @relation(fields: [inventoryId], references: [id], onDelete: SetNull)

  @@index([userId, createdAt])
  @@index([inventoryId])
}

model UserCredential {
  username      String  @id
  passwordHash  String?
  userId        String  @unique
  kakaoId       String? @unique
  emailVerified Boolean @default(false)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  user          User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  emailTokens   EmailVerificationToken[]
}

model EmailVerificationToken {
  id        String   @id @default(uuid())
  userId    String
  email     String
  token     String   @unique
  code      String
  expiresAt DateTime
  createdAt DateTime @default(now())

  credential UserCredential @relation(fields: [userId], references: [userId], onDelete: Cascade)

  @@index([userId])
  @@index([token])
  @@index([email])
  @@index([expiresAt])
}

model LiveGame {
  id        String   @id
  status    String
  category  String?
  isEnded   Boolean  @default(false)
  data      Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([isEnded])
  @@index([isEnded, updatedAt])
}

model KeyValue {
  key   String @id
  value Json
}

model HomeBoardPost {
  id        String   @id @default(uuid())
  title     String
  content   String
  authorId  String
  isPinned  Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([createdAt])
  @@index([isPinned, createdAt])
}

model Guild {
  id          String   @id @default(uuid())
  name        String   @unique
  leaderId    String   @unique
  description String?
  emblem      String?
  settings    Json?
  gold        BigInt   @default(0)
  level       Int      @default(1)
  experience  BigInt   @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  leader      User     @relation("GuildLeader", fields: [leaderId], references: [id], onDelete: Cascade)
  members     GuildMember[]
  messages    GuildMessage[]
  missions    GuildMission[]
  shopItems   GuildShop[]
  donations   GuildDonation[]
  wars        GuildWar[] @relation("Guild1")
  warsAsGuild2 GuildWar[] @relation("Guild2")

  @@index([leaderId])
  @@index([name])
}

model GuildMember {
  id                String   @id @default(uuid())
  guildId           String
  userId            String   @unique
  role              String   @default("member") // leader, officer, member
  joinDate          DateTime @default(now())
  contributionTotal BigInt   @default(0)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  guild             Guild    @relation(fields: [guildId], references: [id], onDelete: Cascade)
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([guildId, userId])
  @@index([guildId])
  @@index([userId])
}

model GuildMessage {
  id        String   @id @default(uuid())
  guildId   String
  authorId  String
  content   String
  createdAt DateTime @default(now())

  guild     Guild    @relation(fields: [guildId], references: [id], onDelete: Cascade)

  @@index([guildId, createdAt])
  @@index([authorId])
}

model GuildMission {
  id          String   @id @default(uuid())
  guildId     String
  missionType String
  status      String   @default("active") // active, completed, expired
  progress    Json?
  target      Json?
  resetAt     DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  guild       Guild    @relation(fields: [guildId], references: [id], onDelete: Cascade)

  @@index([guildId, status])
  @@index([resetAt])
}

model GuildShop {
  id             String   @id @default(uuid())
  guildId        String
  itemTemplateId String
  price          BigInt
  stock          Int      @default(-1) // -1 means unlimited
  purchasedBy    Json?    // Array of userIds who purchased
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  guild          Guild    @relation(fields: [guildId], references: [id], onDelete: Cascade)

  @@index([guildId])
}

model GuildDonation {
  id        String   @id @default(uuid())
  guildId   String
  userId    String
  amount    BigInt   @default(0)
  itemId    String?
  createdAt DateTime @default(now())

  guild     Guild    @relation(fields: [guildId], references: [id], onDelete: Cascade)

  @@index([guildId, createdAt])
  @@index([userId])
}

model GuildWar {
  id        String   @id @default(uuid())
  guild1Id  String
  guild2Id  String
  status    String   @default("pending") // pending, active, completed, cancelled
  startTime DateTime?
  endTime   DateTime?
  result    Json?    // { winnerId: string, guild1Score: number, guild2Score: number }
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  guild1    Guild    @relation("Guild1", fields: [guild1Id], references: [id], onDelete: Cascade)
  guild2    Guild    @relation("Guild2", fields: [guild2Id], references: [id], onDelete: Cascade)
  matches   GuildWarMatch[]

  @@index([guild1Id, status])
  @@index([guild2Id, status])
  @@index([status])
}

model GuildWarMatch {
  id        String   @id @default(uuid())
  warId     String
  player1Id String
  player2Id String
  result    Json?    // { winnerId: string, gameId: string }
  gameId    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  war       GuildWar @relation(fields: [warId], references: [id], onDelete: Cascade)

  @@index([warId])
  @@index([player1Id])
  @@index([player2Id])
}