{
  "name": "@sudam/database",
  "version": "1.0.0",
  "description": "Database package with Prisma client for SUDAM v2",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "prisma:generate": "prisma generate --schema ./schema.prisma",
    "prisma:migrate": "prisma migrate dev --schema ./schema.prisma",
    "prisma:push": "prisma db push --schema ./schema.prisma",
    "prisma:studio": "prisma studio --schema ./schema.prisma",
    "type-check": "tsc --noEmit",
    "lint": "eslint src",
    "clean": "rm -rf generated dist"
  },
  "dependencies": {
    "@prisma/client": "^6.19.0"
  },
  "devDependencies": {
    "prisma": "^6.19.0",
    "typescript": "^5.3.3"
  }
}

