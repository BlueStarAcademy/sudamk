{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "types": ["vite/client"],
    "allowJs": false,
    "noEmit": true,
    "jsx": "react-jsx",
    "allowImportingTsExtensions": true
  },
  "include": [
    "./**/*.ts",
    "./**/*.tsx",
    "./shared/**/*.ts"
  ],
  "exclude": [
    "server",
    "node_modules",
    "dist"
  ]
}
