{
  "name": "sudam-v2",
  "version": "2.0.0",
  "description": "SUDAM 바둑 게임 플랫폼 - 재작성 버전",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "db:generate": "pnpm --filter @sudam/database prisma generate",
    "db:migrate": "pnpm --filter @sudam/database prisma migrate dev",
    "db:push": "pnpm --filter @sudam/database prisma db push",
    "db:studio": "pnpm --filter @sudam/database prisma studio",
    "migrate:data": "tsx scripts/migrate-data.ts",
    "migrate:validate": "tsx scripts/validate-migration.ts",
    "migrate:backup": "tsx scripts/backup-database.ts"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "prettier": "^3.1.0",
    "turbo": "^1.11.0",
    "typescript": "^5.3.3",
    "tsx": "^4.7.0"
  },
  "packageManager": "pnpm@8.10.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  }
}

